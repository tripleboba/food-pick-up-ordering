<!DOCTYPE html>
<html lang="en">

<head>
  <title>Orders</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Supermercado+One&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/eachDish.css" type="text/css" />
  <link rel="stylesheet" href="/styles/cart.css" type="text/css" />
  <link rel="stylesheet" href="/styles/orders.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>


</head>

<body>
  <section class="top-banner">
    <div class="title-container">
      <h2 class="title">Big Mouth Boba</h2>
    </div>
    <section class="contact">
      <div>1234567890</div>
      <div>bigmouth@gmail.com</div>
      <div>12 State Street Newburyport</div>
    </section>
  </section>
  <section class="whole-order">
    <div class="order-header">
      <h3 class="order-title">Order Placed</h3>
    </div>
    <article class="confirmed-order">
      <section class="order-text">
        <!-- this is render from routes/dishes.js post request
        to handle clicked order button on the menu -->
        <% let total=0;%>
          <% let name='' ;%>
            <% let duration=0;%>
              <% for (let item of orderedDishes) { %>

                <div class="placed-items">
                  <p>
                    <%name=item;%>
                  </p>
                  <% total +=item.cost; %>
                    <% duration +=item.duration; %>
                      <p>
                        <%=`${item.title}, ${item.duration} minutes`%>,
                      </p>
                </div>

                <%}%>
                <p>-------------------------</p>
                <footer class="placed-footer">
                  <p>
                    <%=`Customer: ${name}`%>
                  </p>
                  <p>
                    <%=`total: $${total}`%>
                  </p>
                  <p>
                    <%=`ready in: ${duration} minutes`%>
                  </p>
                </footer>
      </section>
    </article>
  </section>
</body>

</html>
